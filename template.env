# MQTT Broker Configuration Template for Firewood Splitter Production Monitor
# ===========================================================================
# Instructions: Copy this file to '.env' and replace the placeholder values
# Command: copy template.env .env

# MQTT Broker Configuration
MQTT_BROKER=YOUR_BROKER_IP_HERE
MQTT_PORT=1883
MQTT_USERNAME=YOUR_USERNAME_HERE
MQTT_PASSWORD=YOUR_PASSWORD_HERE

# MQTT Topic Configuration for LogSplitter Controller and Monitor
# Subscribe to specific controller subsystems for comprehensive monitoring
MQTT_TOPICS=controller/sequence/+,controller/pressure/+,controller/safety/+,controller/relays/+/state,controller/inputs/+/state,controller/control/resp,monitor/fuel/gallons,monitor/temperature/local,monitor/temperature/remote

# Web Server Configuration
WEB_PORT=5000
WEB_HOST=0.0.0.0

# Production Settings (adjust if needed)
PRODUCTION_CYCLE_TIME=30
SPLITS_PER_BASKET=60
FUEL_PER_BASKET=0.25

# Logging Configuration
LOG_LEVEL=INFO
DEBUG=False

# Farm Setup Instructions:
# ========================
# 1. Copy this file: copy template.env .env
# 2. Edit .env and replace:
